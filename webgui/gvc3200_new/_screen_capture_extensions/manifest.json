{
    "name": "Screen Capturing",
    "update_url": "https://clients2.google.com/service/update2/crx",
    "author": "developer@grandstream.com",
    "version" : "1.0",
    "manifest_version" : 2,
    "minimum_chrome_version": "34",
    "description" : "screen sharing extension for Chrome.",
    "homepage_url": "https://www.grandstream.com",
    "background": {
        "scripts": ["background-script.js"],
        "persistent": false
    },
    "content_scripts": [ {
       "js": [ "content-script.js" ],
       "all_frames": true,
       "run_at": "document_end",
       "matches": ["<all_urls>"]
    }],
    "icons" : {
        "48" : "icon.png"
    },
    "permissions": [
        "desktopCapture"
    ],
    "web_accessible_resources": [
        "icon.png"
    ]
}
